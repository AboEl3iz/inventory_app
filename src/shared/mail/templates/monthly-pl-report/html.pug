extends ../_layout

block content
  h2(style='color: #1976d2;') Profit & Loss Statement
  h3= month
  
  table
    tbody
      tr
        td
          strong Total Revenue
        td(style='text-align: right; color: #388e3c;') $#{totalRevenue.toFixed(2)}
      tr
        td
          strong Cost of Goods Sold
        td(style='text-align: right; color: #d32f2f;') -$#{cogs.toFixed(2)}
      tr(style='background: #f5f5f5;')
        td
          strong Gross Profit
        td(style='text-align: right;') $#{grossProfit.toFixed(2)}
      tr
        td
          strong Operating Expenses
        td(style='text-align: right; color: #d32f2f;') -$#{operatingExpenses.toFixed(2)}
      tr(style='background: #e8f5e9;')
        td
          strong Net Profit
        td(style=`text-align: right; color: ${netProfit >= 0 ? '#388e3c' : '#d32f2f'}; font-weight: bold; font-size: 18px;`)
          | $#{netProfit.toFixed(2)}
  
  p
    strong Profit Margin: 
    | #{profitMargin.toFixed(2)}%

