# ========================================
# DATABASE
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=admin
DB_PASSWORD=admin
DB_NAME=inventory_app
DB_TYPE=postgres

# ========================================
# APPLICATION
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# JWT
# ========================================
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=3600s

# ========================================
# STORAGE PROVIDER (cloudinary | s3)
# ========================================
STORAGE_PROVIDER=cloudinary

# Cloudinary
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# AWS S3 (if STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# ========================================
# EMAIL (use Mailpit for local dev)
# ========================================
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM_ADDRESS=noreply@inventory-app.local
ADMIN_EMAIL=admin@inventory-app.local

# ========================================
# REDIS
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ========================================
# QUEUE PROVIDER (bullmq | sqs)
# ========================================
QUEUE_PROVIDER=bullmq

# AWS SQS (if QUEUE_PROVIDER=sqs)
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account/your-queue
